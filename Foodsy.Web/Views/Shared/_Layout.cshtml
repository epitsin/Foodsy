<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/custom")

</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="logo">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="@Url.Content("~/Content/img/logoo.png")" />
                        </a>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="col-md-10 topbar">
                        @Html.Partial("_LoginPartial")
                    </div>
                    <div class="col-md-2 follow_us">
                        <ul>
                            <li><a href="#" class="facebook">Facebook</a></li>
                            <li><a href="#" class="tumbrl">Tumbrl</a></li>
                            <li><a href="#" class="twitter">Twitter</a></li>
                        </ul>
                    </div>
                    <div class="clear"></div>
                    <nav id="main_menu">
                        <div class="menu_wrap">
                            <ul class="nav sf-menu">
                                <li>@Html.ActionLink("Home", "Index", "Home", new { area = String.Empty }, new { })</li>
                                <li>@Html.ActionLink("About", "About", "Home", new { area = String.Empty }, new { })</li>
                                <li>@Html.ActionLink("Recipes", "AllRecipes", "Recipes", new { area = "Recipes" }, new { })</li>
                                <li>@Html.ActionLink("Healthy", "AllArticles", "Articles", new { area = String.Empty }, new { })</li>
                                <li>@Html.ActionLink("Challenges", "AllChallenges", "Challenges", new { area = String.Empty }, new { })</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = String.Empty }, new { })</li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li>@Html.ActionLink("Admin", "Navigation", "Home", new { area = "Administration" }, new { })</li>
                                }
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    @RenderBody()

    <div class="footer_bottom bottom">
        <div class="wrap">
            <div class="container">
                <div class="row">
                    <div class="col-md-5">
                        <div class="foot_logo">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="@Url.Content("~/Content/img/logo2.png")" />
                            </a>
                        </div>
                        <div class="copyright"><a href="https://github.com/epitsin">&copy; 2014 Elena Pitsin</a></div>
                    </div>
                    <div class="col-md-7">
                        <div class="foot_right_block">
                            <div class="fright">
                                <form action="#" method="post">
                                    <input class="inp_search" name="name" type="text" value="Search the Site" />
                                </form>
                            </div>
                            <div class="follow_us">
                                <ul>
                                    <li><a href="#" class="facebook">Facebook</a></li>
                                    <li><a href="#" class="tumbrl">Tumbrl</a></li>
                                    <li><a href="#" class="twitter">Twitter</a></li>
                                </ul>
                            </div>
                            <div class="clear"></div>

                            <div class="clear"></div>
                            <div class="foot_menu">
                                <ul>
                                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = String.Empty }, new { })</li>
                                    <li>@Html.ActionLink("About", "About", "Home", new { area = String.Empty }, new { })</li>
                                    <li>@Html.ActionLink("Recipes", "AllRecipes", "Recipes", new { area = "Recipes" }, new { })</li>
                                    <li>@Html.ActionLink("Healthy", "AllArticles", "Articles", new { area = String.Empty }, new { })</li>
                                    <li>@Html.ActionLink("Challenges", "AllChallenges", "Challenges", new { area = String.Empty }, new { })</li>
                                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = String.Empty }, new { })</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
