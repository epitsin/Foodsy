@model Foodsy.Data.Models.Message

<div class="container">
    <section>
        <div class="row">
            <div class="col-md-5">
                <h2 class="title"><span>Contact Info</span></h2>
                <div id="map"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d187673.05077029936!2d23.32394669999999!3d42.695432150000016!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa8682cb317bf5%3A0x400a01269bf5e60!2sSofia!5e0!3m2!1sen!2sbg!4v1416309226219" width="400" height="350" frameborder="0" style="border:0"></iframe></div>
                <p>Sofia<br />Bulgaria</p>
                <p>Phone: 0888 88 88 88<br />Email: <a href="mailto:epitsin@gmail.com">epitsin@gmail.com</a><br />Web: <a href="https://github.com/epitsin">Github Profile</a></p>
            </div>
            <div class="col-md-7">
                <h2 class="title"><span>Get In Touch</span></h2>
                <div class="contact_form">
                    <div id="note"></div>
                    <div id="fields">
                        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { id = "contact-form" }))
                        {
                            @Html.ValidationSummary(true, string.Empty, new { @class = "text-danger" })
                            @Html.AntiForgeryToken()

                            @Html.TextBoxFor(model => model.Name, new { @class = "col-md-7 form-control bottom-space", placeholder = "Name" })
                            @Html.ValidationMessageFor(m => m.Name, string.Empty, new { @class = "text-danger col-md-offset-1" })
                            
                            @Html.TextBoxFor(model => model.Email, new { @class = "col-md-7 form-control bottom-space", placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, string.Empty, new { @class = "text-danger col-md-offset-1" })
                            
                            @Html.TextBoxFor(model => model.Subject, new { @class = "col-md-7 form-control bottom-space", placeholder = "Subject" })
                            @Html.ValidationMessageFor(m => m.Subject, string.Empty, new { @class = "text-danger col-md-offset-1" })
                            
                            @Html.TextAreaFor(model => model.Text, new { @class = "col-md-8 form-control bottom-space", placeholder = "Your message here..." })
                            @Html.ValidationMessageFor(m => m.Text, string.Empty, new { @class = "text-danger col-md-offset-1" })
                            
                            <div class="clear"></div>
                            <input class="btn dark_btn" type="reset" value="Clear" />
                            <input class="btn send_btn" type="submit" value="Send" />
                            <div class="clear"></div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>