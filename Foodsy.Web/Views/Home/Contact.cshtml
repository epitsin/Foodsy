                <div class="col-md-8">
                    <h2 class="title"><span>Get In Touch</span></h2>
                    <div class="contact_form">
                        <div id="note"></div>
                        <div id="fields">
                            <form id="ajax-contact-form" action="">
                                <input class="col-md-7 form-control bottom-space" type="text" name="name" value="" placeholder="Name (required)" />
                                <input class="col-md-7 form-control bottom-space" type="text" name="email" value="" placeholder="Email (required)" />
                                <input class="col-md-7 form-control bottom-space" type="text" name="subject" value="" placeholder="Subject" />
                                <textarea name="message" id="message" class="col-md-8 form-control bottom-space" placeholder="Message"></textarea>
                                <div class="clear"></div>
                                <input type="reset" class="btn dark_btn" value="Clear form" />
                                <input type="submit" class="btn send_btn" value="Submit" />
                                <div class="clear"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
