@model Foodsy.Web.Areas.Recipes.ViewModels.Recipes.CreateRecipeViewModel

<div class="form-group">
    @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>    
    @Html.ValidationMessageFor(m => m.Name, string.Empty, new { @class = "text-danger col-md-offset-1" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.Description, string.Empty, new { @class = "text-danger col-md-offset-1" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Category, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        @Html.EnumDropDownListFor(m => m.Category, new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.Category, string.Empty, new { @class = "text-danger col-md-offset-1" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.MealType, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        @Html.EnumDropDownListFor(m => m.MealType, new { @class = "form-control" })
    </div>
    @Html.ValidationMessageFor(m => m.MealType, string.Empty, new { @class = "text-danger col-md-offset-1" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.GramsPerPortion, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        @Html.TextBoxFor(m => m.GramsPerPortion, new { @class = "form-control", type = "number" })
    </div>
    @Html.ValidationMessageFor(m => m.GramsPerPortion, string.Empty, new { @class = "text-danger col-md-offset-1" })
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Ingredients, new { @class = "col-md-4 control-label" })
    <div class="col-md-8">
        @Html.ListBoxFor(m => m.SelectedIngredients, Model.Ingredients, new { @class = "form-control" })
    </div>
</div>
<ol id="actions" class="with-numbers col-md-offset-3">
    @Html.EditorFor(m => m.Actions)
</ol>
<div class="col-md-offset-4">
    @Foodsy.Web.Helpers.HtmlHelpers.AddLink(Html, "Add more steps", "#actions", ".action", "Actions", typeof(Foodsy.Web.Areas.Recipes.ViewModels.Actions.ActionViewModel))
</div>